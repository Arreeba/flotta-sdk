{
  "name": "flotta-sdk",
  "version": "0.0.0-development",
  "description": "Flotta API wrapper",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "commit": "git-cz",
    "start": "ts-node ./src/index.ts",
    "prepublishOnly": "rimraf dist; tsc",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "test": "jest --runInBand --verbose --forceExit",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Arreeba/flotta-sdk.git"
  },
  "keywords": [
    "Flotta",
    "Ristoranti",
    "Tracking",
    "Drivers"
  ],
  "author": "Vittorio Adamo <vittorio.adamo@arreeba.com> (https://ristoranti.it/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Arreeba/flotta-sdk/issues"
  },
  "homepage": "https://github.com/Arreeba/flotta-sdk#readme",
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/graphql": "^0.10.2",
    "@types/jest": "^20.0.8",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.0.0",
    "jest": "^20.0.4",
    "rimraf": "^2.6.1",
    "semantic-release": "^7.0.2",
    "ts-jest": "^20.0.13",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.4.0",
    "tslint-config-standard": "^6.0.1",
    "typescript": "^2.4.2"
  },
  "dependencies": {
    "apollo-client": "^1.9.1",
    "graphql-tag": "^2.4.2",
    "isomorphic-fetch": "^2.2.1",
    "node-fetch": "^1.7.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
